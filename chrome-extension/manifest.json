{
  "manifest_version": 3,
  "name": "Temple Search",
  "version": "0.0.4",
  "description": "Advanced Temple Search: Search across temples for proxy appointments at the Church of Jesus Christ of Latter-day Saints",
  "content_scripts": [{
    "css": ["foreground.css"],
    "js": [
      "temple-geo.js",
      "foreground.js"
    ],
    "matches": [
      "https://tosr.churchofjesuschrist.org/*"
    ],
    "all_frames": true
  }],
  "host_permissions": [
    "https://tosr.churchofjesuschrist.org/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "temle-search@robrich.org",
      "strict_min_version": "109.0"
    },
    "safari": {
      "strict_min_version": "15.4",
      "strict_max_version": "*"
    }
  }
}
