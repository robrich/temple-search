{
  "manifest_version": 3,
  "name": "Temple Search",
  "version": "0.0.1",
  "description": "Advanced Temple Search: Search across temples for proxy appointments at the Church of Jesus Christ of Latter-day Saints",
  "content_scripts": [{
    "css": ["foreground.css"],
    "js": [
      "temple-geo.js",
      "foreground.js"
    ],
    "matches": [
      "https://tos.churchofjesuschrist.org/*"
    ],
    "all_frames": true
  }],
  "host_permissions": [
    "https://tos.churchofjesuschrist.org/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
